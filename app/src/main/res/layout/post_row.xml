<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_post_icon_post_row"
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:src="@drawable/blackboard"
            android:layout_weight="0.2"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/primaryLightColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_post_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_creation_time_post_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="19th June, 2019" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_post_content_post_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:autoLink="web"
        android:padding="5dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut la."
        android:textColor="#C9000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linearLayout_post_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/half_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/bt_like_post_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@drawable/ic_like_border_black_24dp"
            android:paddingStart="10dp"
            android:text="Like"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_comment_post_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
            android:paddingStart="20dp"
            android:text="Comment"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_share_post_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:paddingStart="5dp"
            android:text="  Share"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>