<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_post_icon_post_row"
            android:layout_width="104dp"
            android:layout_height="53dp"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/buttonshape" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_post_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="Title"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_creation_time_post_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:text="19th June, 2019" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_post_content_post_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:padding="5dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut la."
        android:textColor="#C9000000"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/linearLayout_post_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:weightSum="3">

        <Button
            android:id="@+id/bt_like_post_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_thumb_up_black_24dp"
            android:text="Like"
            android:textAlignment="viewStart"/>

        <!--<ImageButton-->
        <!--android:id="@+id/imageButton"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="fitStart"-->
        <!--android:layout_weight="1"-->
        <!--app:srcCompat="@drawable/ic_thumb_up_black_24dp" />-->

        <Button
            android:id="@+id/bt_comment_post_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
            android:text="Comment"
            android:textAlignment="viewStart"/>

        <Button
            android:id="@+id/bt_share_post_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_share_black_24dp"
            android:text="Share"
            android:textAlignment="textStart" />
    </LinearLayout>
</LinearLayout>