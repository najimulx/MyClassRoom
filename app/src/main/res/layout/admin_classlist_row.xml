<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout3"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_name_faculty_main_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:text="Class Name"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_session_faculty_main_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:paddingStart="10dp"
        android:text="19/12/2018 - 04/05/2019"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/tv_name_faculty_main_recycler"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_student_roll_faculty_main_recycler"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        android:paddingStart="10dp"
        android:text="01 - 48"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_faculty_main_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>