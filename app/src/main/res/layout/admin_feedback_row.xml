<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bt_admin_feedback_senderName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sender Name"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_admin_feedback_className"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Class Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_admin_feedback_session"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Session"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_admin_feedback_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="18sp" />

    <Button
        android:id="@+id/bt_admin_feedback_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download Feedback"
        android:textSize="12sp" />

</LinearLayout>